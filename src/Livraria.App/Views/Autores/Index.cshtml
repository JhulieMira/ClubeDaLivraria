@model IEnumerable<Livraria.App.ViewModels.AutorViewModel>

@{
    ViewData["Title"] = "Autores cadastrados";
}

<h1>@ViewData["Title"]</h1>
<hr />

<vc:Summary></vc:Summary>

<p>
    <a class="btn btn-info" asp-action="Create">Cadastrar autor</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/imagens/@item.Imagem" alt="@item.Imagem" style="width: 70px; height: 100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
    
                <td>
                    <a class="btn btn-info" asp-controller="Autores" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-search"></i></a>
                    <a class="btn btn-warning" asp-controller="Autores" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil-alt"></i></a>
                    <a class="btn btn-danger" asp-controller="Autores" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
