@model Livraria.App.ViewModels.AutorViewModel

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th></th>
            <th>
                <h4>Livro</h4>
            </th>
            <th>
                <h4>Fornecedor</h4>
            </th>
            <th>
                <h4>Valor</h4>
            </th>
            <th>
                <h4>Ativo</h4>
            </th>
            <th></th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model.Livros)
        {
            <tr>
                <td>
                    <img src="~/imagens/@item.Imagem" alt="@item.Imagem" style="width: 70px; height: 100px" />
                </td>
      
                <td>
                    <input type="hidden" asp-for="Id"/>
                    <a asp-controller="Livros" asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Nome)
                    </a>
                </td>

                <td>
                    <input type="hidden" asp-for="@item.FornecedorId"/>
                    <a asp-controller="Fornecedores" asp-action="Details" asp-route-id="@item.FornecedorId">
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                    </a>
                </td>
                <td>
                    @item.Valor.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a class="btn btn-info" asp-controller="Livros" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-search"></i></a>
                    <a class="btn btn-warning" asp-controller="Livros" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil-alt"></i></a>
                    <a class="btn btn-danger" asp-controller="Livros" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
